{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@webgamekit/animation": ["./packages/animation/src/index.ts"],
      "@webgamekit/threejs": ["./packages/threejs/src/index.ts"],
      "@webgamekit/audio": ["./packages/audio/src/index.ts"],
      "@webgamekit/game": ["./packages/game/src/index.ts"],
      "@webgamekit/controls": ["./packages/controls/src/index.ts"]
    }
  }
}
